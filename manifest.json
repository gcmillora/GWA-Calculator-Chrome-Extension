{
  "name": "GWA Calculator",
  "description": "A simple GWA Calculator extension.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "content.html",
    "default_title": "GWA Calculator"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["*.ttf"],
  "permissions": ["activeTab"],
  "background": {
    "script": ["content.js"]
  }
}
